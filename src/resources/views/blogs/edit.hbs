<div class="mt-4">
    <h3>Chỉnh sửa khoá học</h3>
    <form method="post" action="/blogs/{{blog._id}}?_method=PUT">
        <div class="form-group mt-2">
            <label for="description">Mô tả khoá học</label>
            <textarea class="form-control" id="description" name="description">{{blog.description}}
            </textarea>
        </div>
        <div class="form-group mt-2">
            <label for="name">Tên khoá học</label>
            <input type="text" class="form-control" value="{{blog.name}}" id="name" name="name">
        </div>
        <div class="form-group mt-2">
            <label for="videoId">Video ID</label>
            <input type="text" class="form-control" value="{{blog.videoId}}" id="videoId" name="videoId">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Cập nhật</button>
    </form>
</div>